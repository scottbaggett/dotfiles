// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "buffer_font_family": "Hack Nerd Font Mono",
  "format_on_save": "on",
  "tab_size": 4,
  "terminal": {
    "font_family": "Hack Nerd Font Mono",
    "shell": "system"
  },
  "vim_mode": false,
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "context_servers": {
    "mcp-server-sequential-thinking": {
      "source": "extension",
      "enabled": false,
      "settings": {}
    },
    "mcp-server-puppeteer": {
      "source": "extension",
      "enabled": false,
      "settings": {}
    },
    "mcp-server-context7": {
      "source": "extension",
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"]
        }
      }
    }
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "git_panel": {
    "dock": "right"
  },
  "agent": {
    "use_modifier_to_send": true,
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-haiku-4-5-latest"
    },
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    },
    "model_parameters": [],
    "default_profile": "write"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "macOS Classic Light",
    "dark": "Nightfox - blurred"
  },
  "languages": {
    "devicetree": {
      "tab_size": 2
    },
    "TypeScript": {
      "formatter": { "language_server": { "name": "biome" } },
      "tab_size": 4,
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JavaScript": {
      "tab_size": 4,
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JSON5": {
      "tab_size": 2,
      "formatter": { "language_server": { "name": "biome" } }
    },
    "JSON": {
      "formatter": { "language_server": { "name": "biome" } },
      "tab_size": 2
    },
    "CSS": {
      "formatter": {
        "language_server": { "name": "biome" }
      }
    },
    "TSX": {
      "formatter": { "language_server": { "name": "biome" }, "enabled": true },
      "tab_size": 4,
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    }
  },
  "inlay_hints": {
    // "enabled": true
  },
  "file_types": {
    "devicetree": ["*.keymap"]
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  // Turn off telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "hide_gitignore": false,
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  // Move some unnecessary panels to the left
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  }
}
